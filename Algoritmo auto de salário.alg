algoritmo "Aumento de salário"

var

salario, reajuste, novoSalario: real

inicio

  Escreval ("Informe o valor do seu salário atual R$")
  Leia (salario)
  reajuste <- salario * 30 / 100)
  novoSalario <- salario + reajuste
  Escreval ("Seu novo salário será R$", novoSalario )

fimalgoritmo
